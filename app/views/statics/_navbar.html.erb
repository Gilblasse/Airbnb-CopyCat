
<% if current_user.try(:profile_type) != "Host" %>
  <li class="nav-item ">
    <%= link_to "Become a host", login_path(type: 'become-a-host'), class: "nav-link" %>
</li>
<% end %>

<% if logged_in? %>
  <li class="nav-item">
    <%= link_to "Log out", '/logout', method: 'delete', class: "nav-link" %>
  </li>
<% else %>
  <li class="nav-item">    
    <% if params[:type] %>
      <%= link_to "Sign up", signup_path(type: 'become-a-host'), class: "nav-link" %>
    <% else %>
      <%= link_to "Sign up", signup_path, class: "nav-link" %>
    <% end %>
  </li>

  <li class="nav-item">
    <%= link_to "Log in", '/login' , class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Login w/ Facebook", '/auth/facebook' , class: "nav-link"%>
  </li>
  <li class="nav-item">
    <%= link_to "Log in w/ Google", '/auth/google_oauth2' , class: "nav-link"%>
  </li>
<% end %>